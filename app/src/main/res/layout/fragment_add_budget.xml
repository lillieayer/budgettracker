<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddBudget"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/teal_200">

    <EditText
        android:inputType="text"
        android:id="@+id/budget_name_text"
        android:hint="@string/editName"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        android:layout_height="48dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editCategory"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <Spinner
        android:layout_margin="2dp"
        android:id="@+id/budget_category"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:entries="@array/budgetCategories"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_margin="2dp"
        android:inputType="date"
        android:id="@+id/budget_date_text"
        android:hint="@string/editDate"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="18sp"/>

    <EditText
        android:layout_margin="2dp"
        android:inputType="text"
        android:id="@+id/budget_amount_text"
        android:layout_width="50dp"
        android:hint="@string/editAmt"
        android:textColor="@color/black"
        android:layout_height="48dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/budget_comment_text"
        android:inputType="text"
        android:hint="@string/editComment"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="48dp"
        android:textSize="18sp"/>

</LinearLayout>